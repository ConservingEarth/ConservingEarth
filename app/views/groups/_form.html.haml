= simple_form_for @group, html: {multipart: true }, validate: true do |f|
	- if @group.errors.any?
		#errors
		%h2
		= pluralize(@group.errors.count, "error")
		prevent this group from saving
		%ul
			- @group.errors.full_messages.each do |msg|
				%li= msg

	.form-group
		= f.input :image, imput_html: {class: 'form-control'}

	.form-group
		= f.input :title, imput_html: {class: 'form-control'}

	.form-group
		= f.input :description, imput_html: {class: 'form-control'}

	.form-group  
		= f.label :address
		= f.text_field :address

	= f.button :submit, class: "btn btn-primary"