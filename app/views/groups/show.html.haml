= render "layouts/nav"
= render "dashboard"
  
#group_show
  %h1= @group.title
  %p.username
    created by
    = @group.longitude
    = @group.latitude
    = @group.address
  .clearfix
    .group_image_description
      = image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=10&markers=#{@group.latitude}%2C#{@group.longitude}"
      = @group.description
    .group_data
      = link_to "Website", @group, class: "button"
      = link_to "Join this group", join_group_path(@group), class: "button"
      = link_to 'leave', leave_group_path(@group), class: "button" 
      %p.data
        %i.fa.fa-comments-o
        = link_to "Edit", edit_group_path(@group), class: "data"
        = link_to "Delete", group_path(@group), method: :delete, data: { confirm: "Are you sure?" }, class: "data"
        

