#post_show
  %h1= @video.title
  %p.username
    Shared by
    = @video.user.name
    about
    = time_ago_in_words(@video.created_at)
  .clearfix
    .post_image_description
      = image_tag @video.image.url(:medium)
      .description= simple_format(@video.description)
    .post_data
      = link_to "Visit Link", @video.link, class: "button"
      = link_to like_video_path(@video), method: :get, class: "data" do
        %i.fa.fa-thumbs-o-up
        = pluralize(@video.get_upvotes.size, "Like")
      %p.data
        %i.fa.fa-comments-o
        = pluralize(@video.comments.count, "Comment")
      - if @video.user == current_user
        = link_to "Edit", edit_video_path(@video), class: "data"
        = link_to "Delete", video_path(@video), method: :delete, data: { confirm: "Are you sure?" }, class: "data"
    #random_post
      %h3 Random Inspiration
      .post
        .post_image
          = link_to "image", video_path(@random_video)
        .post_content
          .title
            %h2= link_to @random_video.title, video_path(@random_video)
          .data.clearfix
            %p.username
              Shared by
              = @random_video.user.name
            %p.buttons
              %span
                %i.fa.fa-comments-o
                = @random_video.comments.count
              %span
                %i.fa.fa-thumbs-o-up
                = @random_video.get_likes.size 

#comments
  %h2.comment_count= pluralize(@video.comments.count, "Comment")
  - @comments.each do |comment|
    .comment
      %p.username= comment.user.name
      %p.content= comment.content

  = render "comments/videoform"