#post_show
  %h1= @youtube.title.html_safe 
  %p.username
    Shared by
    = @video.user.name
    about
    = time_ago_in_words(@video.created_at)
  .clearfix
    .post_image_description
      = @youtube.html.html_safe
      .description= simple_format(@video.description)
    .post_data
      = link_to "Official Link", @video.link, class: "button"
      %p.data
        %i.fa.fa-comments-o
        = pluralize(@video.comments.count, "Comment")
      - if @video.user == current_user
        = link_to "Edit", edit_video_path(@video), class: "data"
        = link_to "Delete", video_path(@video), method: :delete, data: { confirm: "Are you sure?" }, class: "data"
    #random_post
      %h3 Ad
      .post
        .post_image
          = link_to "image", video_path(@random_video)
        .post_content
          .title
            %h2= link_to @random_video.title, video_path(@random_video)



#comments
  %h2.comment_count= pluralize(@video.comments.count, "Comment")
  - @comments.each do |comment|
    .comment
      %p.username= comment.user.name
      %p.content= comment.content

  = render "comments/videoform"