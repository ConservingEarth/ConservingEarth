<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @video.image.url(:medium) %>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Title:</strong></td>
                <td><%= @video.title %></td>
              </tr>
              <tr>
                <td><strong>Description:</strong></td>
                <td><%= @video.description %></td>
              </tr>
            </tbody>
          </table>
          <%= link_to "Write a Comment", new_video_info_path(@video) %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="info_title"><%= @video.title %></h1>
        <p><%= @video.description %></p>

        <% if @info.blank? %>
          <h3>No infos just yet, would you like to add the first!</h3>
          <%= link_to "Write info", new_video_info_path(@video), class: "btn btn-danger" %>
        <% else %>
          <% @infos.each do |info| %>
            <div class="infos">
              <p><%= info.comment %></p>
            </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_video_path(@video) %> |
