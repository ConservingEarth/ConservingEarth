= simple_form_for @project, html: {multipart: true }, validate: true do |f|
	- if @project.errors.any?
		#errors
		%h2
		= pluralize(@project.errors.count, "error")
		prevent this project from saving
		%ul
			- @project.errors.full_messages.each do |msg|
				%li= msg


	.form-group
		= f.input :name, imput_html: {class: 'form-control'}

	.form-group
		= f.input :description, imput_html: {class: 'form-control'}		
	 
	
	= f.button :submit, class: "c3-btn"