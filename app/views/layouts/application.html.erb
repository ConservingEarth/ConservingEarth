<html>
<head>
	<title> Conserving Earth </title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

	<script>document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js?snipver=1"></' + 'script>')</script>
	<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD1DD_friItV0Ii_y_SA_ItnvuwzgCfyjM"></script>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
</head>
<body>
	<div class="body-container">
	<div class="header">
		<nav class="navhead">
			<div class="logo"><%= link_to "Conserving Earth", root_path %>
			</div>
			<div class="userlogin">
			<% if user_signed_in? %>
				<%= button_to current_user.name %>
				<div class="usermenu">
					<ul>
						<li><a href="#">user</a></li>
						<li><a href="#">community</a></li>
						<li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
					</ul>
				</div>
			<% else %>
				<%= link_to "sign in", new_user_session_path, class: "button" %>
				<%= link_to "sign up", new_user_registration_path, class: "button" %>
			<% end %>
			
			</div>
			<div class="search">
				<form>
					<input type="text" placeholder="search">
					<input type="submit">
				</form>
			</div>
			
		</nav>
	</div>				   
    
     	<div class="wrapper">

        <!-- Sidebar -->
	        <div class="sidebar">
	        
	            <ul class="sidebar-nav">
		            <li><%= link_to "News", root_path, :class => "sidebar-nav-links" %></li>
		            <li><%= link_to "Videos", videos_path, :class => "sidebar-nav-links" %></li>
		            <li><%= link_to "Community", root_path, :class => "sidebar-nav-links" %></li>
					<li><%= link_to "Map", map_path, :class => "sidebar-nav-links" %></li>
	                <li><%= link_to "About", about_path, :class => "sidebar-nav-links" %></li>
	              </ul>
	        
	      	</div>
	      	<div class="content">
	   			
				<% flash.each do |name, msg| %> 
				<%= content_tag(:div, msg, class: "alert") %> 
				<% end %> 
									 
				<%= yield %>
				
						 		 
							
			</div> 
	      	<div class="rightbar">
				<div>
					<%= image_tag("inline-rectangle.jpg", :alt => "rss feed") %>
				</div>
			</div>
 		</div>
	</div>
</body>
<html>
