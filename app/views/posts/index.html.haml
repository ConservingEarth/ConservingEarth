= render "layouts/nav"
.activities
	= link_to "New", root_path, class: "button2"
	= link_to "Popular", root_path, class: "button2"
	= link_to "Search", root_path, class: "button2"
	= link_to "Add Post", new_post_path, class: "button2" 
#thenews
	#news
		%br
		%h2 News
		%hr
		%br
		- @posts.each do |post|
			.new
				.new_content
					.title
						%h2= link_to post.title, post.link
						%p.username
							Shared by
							= post.user.name
							= time_ago_in_words(post.created_at)
							ago
						%p.buttons
							%span
								= link_to "Comments", post
								%i.fa.fa-comments-o
								= post.comments.count
	#tweets
		%br
		%h2 Tweets
		%hr
		%br
		= render 'tweets'
	#ad
		%br
		%h2 Ad
		%hr
		%br	
	%br	
	%br				
	.paginate
		= will_paginate @posts 