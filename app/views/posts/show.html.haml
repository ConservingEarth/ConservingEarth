= render "layouts/nav"
#new_show
  %h1= @post.title
  %p.username
    Shared by
    = @post.user.name
    about
    = time_ago_in_words(@post.created_at)
  .clearfix
    .new_image_description
      .description= simple_format(@post.description)
    .new_data
      = link_to "Official Link", @post.link, class: "button"
      = link_to "Follow", @post, class: "button"
      %p.data
      - if @post.user == current_user
        = link_to "Edit", edit_post_path(@post), class: "data"
        = link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: "data"
    #random_post
      %h3 Ad
      .new
        .new_image
          <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
          <!-- cead1 -->
          <ins class="adsbygoogle"
          style="display:inline-block;width:300px;height:250px"
          data-ad-client="ca-pub-7936828006205489"
          data-ad-slot="6671791314"></ins>
          <script>
          (adsbygoogle = window.adsbygoogle || []).push({});
          </script>

.disques
  = render "disqusp"